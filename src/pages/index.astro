---
import Layout from "../layouts/Layout.astro";
---
<Layout>
	<main class="h-screen grid place-content-center ">
		<div class="bg-white rounded-2xl w-80 p-4 flex flex-col gap-4">
			<picture class="pb-2">
				<img class="rounded-lg overflow-hidden" src="image-qr-code.png" alt="">
			</picture>
			<h1 class="font-bold text-xl text-center px-4">Improve your front-end skills by building products</h1>
			<p class="text-sm text-center text-gray-500 px-8">Scan the QR to visit Frontend Mentor and take your coding skills to the next level</p>
		</div>
	</main>
</Layout>